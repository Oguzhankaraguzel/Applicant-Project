@model HomePageVM

<div class="container-fluid p-0 mb-2">
    <div class="owl-carousel header-carousel position-relative">
        <div class="owl-carousel-item position-relative">
            <img class="img-fluid" src="~/img/mainPage.png" alt="">
            <div class="position-absolute top-0 start-0 w-100 h-100 d-flex align-items-center" style="background: rgba(24, 29, 56, .7);">
                <div class="container">
                    <div class="row justify-content-start">
                        <div class="col-sm-10 col-lg-8">
                            <h5 class="text-primary text-uppercase mb-3 animated slideInDown">CAWA Başvuru web uygulaması</h5>
                            <h1 class="display-3 text-white animated slideInDown">lorem ipsum, dolor sit amet.</h1>
                            <p class="fs-5 text-white mb-4 pb-2">Vero elitr justo clita lorem. Ipsum dolor at sed stet sit diam no. Kasd rebum ipsum et diam justo clita et kasd rebum sea sanctus eirmod elitr.</p>
                            @if (Model.ExistingUser)
                            {
                                if (User.IsInRole("Admin") || User.IsInRole("SuperAdmin"))
                                {
                                    <a asp-action="Index" asp-controller="Admin" class="btn btn-light py-md-3 px-md-5 animated slideInRight" id="showResult">Yönetici Paneli</a>
                                }
                                else if (Model.FilesUploaded)
                                {
                                    <a asp-action="ApplicantResult" class="btn btn-light py-md-3 px-md-5 animated slideInRight">Başvuru Sonucum?</a>
                                }
                                else
                                {
                                    <a class="btn btn-primary py-md-3 px-md-5 me-3 animated slideInLeft" asp-action="CreateReference">Başvurunu Tamamla</a>
                                }
                            }
                            else
                            {
                                <a asp-action="ApplicantResult" class="btn btn-light py-md-3 px-md-5 animated slideInRight">Başvuru Sonucum?</a>
                                <a class="btn btn-primary py-md-3 px-md-5 me-3 animated slideInLeft" asp-action="CreateApplicant">Başvuru Yap</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>